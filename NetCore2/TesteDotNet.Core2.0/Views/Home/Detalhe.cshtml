@{
    ViewData["Title"] = "Detalhe";
    @model ItemViewModel
}
<h3 class="page-header">Detalhe do Item</h3>
<div class="row">
    <div class="form-group col-md-8">
        <label asp-for="Nome"></label>
        @Html.DisplayFor(model => model.Nome)
    </div>
    <div class="form-group col-md-8">
        <label asp-for="Descricao"></label>
        @Html.DisplayFor(model => model.Descricao)
    </div>
    <div class="form-group col-md-8">
        <label asp-for="CategoriaId"></label>
        @Html.DisplayFor(model => model.CategoriaNome)
    </div>
    <div class="form-group col-md-8">
        <label asp-for="DataCriacao"></label>
        @Html.DisplayFor(model => model.DataCriacao)
    </div>
</div>
<hr />
<div id="actions" class="row">
    <div class="col-md-12">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Voltar</a>
    </div>
</div>