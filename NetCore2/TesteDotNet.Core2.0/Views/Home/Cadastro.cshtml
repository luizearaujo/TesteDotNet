@{
    ViewData["Title"] = "Cadastro";
    @model ItemViewModel
}
<h3 class="page-header">@Model.TituloPagina</h3>
<form asp-action="Cadastro" asp-controller="Home" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-8">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" type="text" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-8">
            <label asp-for="Descricao"></label>
            <textarea asp-for="Descricao" type="text" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="CategoriaId"></label>
            <select asp-for="CategoriaId" asp-items="Model.ListaCategorias" class="form-control">
                <option value="">--Escolha uma categoria--</option>
            </select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
    </div>
    <hr />
    <div id="actions" class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Cancelar</a>
        </div>
    </div>
</form>
